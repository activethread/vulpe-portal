<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
        <artifactId>portal</artifactId>
        <groupId>org.vulpe</groupId>
        <version>1.0</version>
    </parent>

	<groupId>org.vulpe.portal</groupId>
	<artifactId>portal-domains</artifactId>
	<version>1.0</version>
	<packaging>jar</packaging>
	<name>portal - Domains</name>
	
	<dependencies>
		<dependency>
			<groupId>org.vulpe.portal</groupId>
			<artifactId>portal-commons</artifactId>
			<version>1.0</version>
		</dependency>
	</dependencies>
	
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.6</version>
				<executions>
					<execution>
						<id>unjar-fox</id>
						<phase>validate</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<taskdef resource="net/sf/antcontrib/antlib.xml" classpathref="maven.plugin.classpath" />
								<property name="tools.dir"
									value="${settings.localRepository}/org/vulpe/vulpe-fox/1.0.1/vulpe-fox-1.0.1/tools" />
								<property name="tools.dir.present" value="false" />
								<available file="${tools.dir}" property="tools.dir.present"
									type="dir" />
								<if>
									<equals arg1="${tools.dir.present}" arg2="false" />
									<then>
										<unjar
											src="${settings.localRepository}/org/vulpe/vulpe-fox/1.0.1/vulpe-fox-1.0.1.jar"
											dest="${settings.localRepository}/org/vulpe/vulpe-fox/1.0.1/vulpe-fox-1.0.1" />
									</then>
								</if>
								<delete dir="${basedir}/../web/target" />
							</tasks>
						</configuration>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>ant-contrib</groupId>
						<artifactId>ant-contrib</artifactId>
						<version>1.0b3</version>
						<exclusions>
							<exclusion>
								<groupId>ant</groupId>
								<artifactId>ant</artifactId>
							</exclusion>
						</exclusions>
					</dependency>
					<dependency>
						<groupId>org.apache.ant</groupId>
						<artifactId>ant-nodeps</artifactId>
						<version>1.8.1</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>apt-maven-plugin</artifactId>
				<version>1.0-alpha-4</version>
				<configuration>
					<factory>org.vulpe.fox.all.AllProcessorFactory</factory>
					<options>
						<param>template=${settings.localRepository}/org/vulpe/vulpe-fox/1.0.1/vulpe-fox-1.0.1/tools/all/templates/plugin.ftl</param>
					</options>
					<sourceOutputDirectory>${basedir}/../</sourceOutputDirectory>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>org.vulpe</groupId>
						<artifactId>vulpe-fox</artifactId>
						<version>1.0.1</version>
						<exclusions>
							<exclusion>
								<groupId>com.sun</groupId>
								<artifactId>tools</artifactId>
							</exclusion>
						</exclusions>
					</dependency>
					<dependency>
						<groupId>xml-apis</groupId>
						<artifactId>xml-apis</artifactId>
						<version>1.4.01</version>
					</dependency>
					<dependency>
						<groupId>org.vulpe.portal</groupId>
						<artifactId>portal-commons</artifactId>
						<version>1.0</version>
					</dependency>
				</dependencies>
				<executions>
					<execution>
						<phase>compile</phase>
						<goals>
							<goal>process</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>